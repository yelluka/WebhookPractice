pipeline {
    agent any 
    stages {
        stage('compile stage') { 
            steps {
                withenv(maven : 'maven') {
                sh 'mvn clean compile'
                //
           }
        }
     }
        stage('Testing stage') { 
            steps {
                withenv(maven : 'maven') {
                sh 'mvn test'
                //
            }
        }
      }
        stage('Deployment stage') { 
            steps {
                 withenv(maven : 'maven') {
                sh 'mvn deploy'
                //
             }
          }
       }
   }
}
